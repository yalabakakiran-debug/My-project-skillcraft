<body>

  <div class="quiz-container">
    <h1>ðŸŽ“ Quiz Game</h1>
    <div id="quiz">
      <div id="question" class="question"></div>
      <div id="options" class="options"></div>
      <button id="nextBtn">Next</button>
    </div>
    <div id="result" class="result"></div>
  </div>

<script>
  // ===== Quiz Questions =====
  const quizData = [
    {
      type: 'single',
      question: 'Which planet is known as the Red Planet?',
      options: ['Earth', 'Mars', 'Jupiter', 'Venus'],
      correct: 'Mars'
    },
    {
      type: 'multi',
      question: 'Which of the following are programming languages?',
      options: ['Python', 'HTML', 'C++', 'CSS'],
      correct: ['Python', 'C++']
    },
    {
      type: 'fill',
      question: '______ is the capital of France.',
      correct: 'Paris'
    },
    {
      type: 'single',
      question: 'Which HTML tag is used to create a hyperlink?',
      options: ['<link>', '<a>', '<href>', '<url>'],
      correct: '<a>'
    }
  ];

  let currentQuestion = 0;
  let score = 0;

  const questionEl = document.getElementById('question');
  const optionsEl = document.getElementById('options');
  const nextBtn = document.getElementById('nextBtn');
  const resultEl = document.getElementById('result');

  // ===== Load a Question =====
  function loadQuestion() {
    const q = quizData[currentQuestion];
    questionEl.textContent = `Q${currentQuestion + 1}. ${q.question}`;
    optionsEl.innerHTML = '';

    // SINGLE CHOICE (Radio)
    if (q.type === 'single') {
      q.options.forEach(opt => {
        const label = document.createElement('label');
        label.innerHTML = `
          <input type="radio" name="option" value="${opt}"> ${opt}
        `;
        optionsEl.appendChild(label);
      });
    }

    // MULTIPLE CHOICE (Checkbox)
    else if (q.type === 'multi') {
      q.options.forEach(opt => {
        const label = document.createElement('label');
        label.innerHTML = `
          <input type="checkbox" name="option" value="${opt}"> ${opt}
        `;
        optionsEl.appendChild(label);
      });
    }

    // FILL-IN-THE-BLANK (Text Input)
    else if (q.type === 'fill') {
      const input = document.createElement('input');
      input.type = 'text';
      input.placeholder = 'Type your answer here...';
      optionsEl.appendChild(input);
    }
  }

  // ===== Check the Answer =====
  function checkAnswer() {
    const q = quizData[currentQuestion];
    let userAnswer;

    if (q.type === 'single') {
      const selected = document.querySelector('input[name="option"]:checked');
      if (selected) userAnswer = selected.value;
      if (userAnswer === q.correct) score++;
    }

    else if (q.type === 'multi') {
      const checked = [...document.querySelectorAll('input[name="option"]:checked')].map(c => c.value);
      if (arraysEqual(checked.sort(), q.correct.sort())) score++;
    }

    else if (q.type === 'fill') {
      const input = document.querySelector('input[type="text"]').value.trim();
      if (input.toLowerCase() === q.correct.toLowerCase()) score++;
    }
  }

  // Helper function for comparing arrays
  function arraysEqual(a, b) {
    return JSON.stringify(a) === JSON.stringify(b);
  }

  // ===== Show Result =====
  function showResult() {
    document.getElementById('quiz').style.display = 'none';
    resultEl.textContent = `ðŸŽ‰ You scored ${score} out of ${quizData.length}!`;
  }

  // ===== Next Button Click =====
  nextBtn.addEventListener('click', () => {
    checkAnswer();
    currentQuestion++;
    if (currentQuestion < quizData.length) {
      loadQuestion();
    } else {
      showResult();
    }
  });

  // ===== Initialize Quiz =====
  loadQuestion();
</script>

</body>
</html>
